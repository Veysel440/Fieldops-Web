    "@tanstack/vue-query": "^5.85.5",
    "@vee-validate/zod": "^4.15.1",
    "axios": "^1.11.0",
    "idb-keyval": "^6.2.2",
    "localforage": "^1.10.0",
    "maplibre-gl": "^5.7.0",
    "pinia": "^3.0.3",
    "pmtiles": "^4.3.0",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.18",
    "vue-i18n": "^11.1.11",
