{
  "name": "fieldops-web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": { "node": "^20.19.0 || >=22.12.0" },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" -- \"vite build\"",
    "build-only": "vite build",
    "preview": "vite preview --port 5173 --strictPort",
    "type-check": "vue-tsc --noEmit -p tsconfig.json",
    "lint": "eslint . --ext .ts,.vue --max-warnings=0",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "test": "vitest run",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "lhci:autorun": "lhci autorun --config=./lighthouserc.json",
    "stories": "histoire dev",
    "stories:build": "histoire build",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@sentry/vue": "^10.7.0",
    "@tanstack/query-async-storage-persister": "^5.85.5",
    "@tanstack/query-persist-client-core": "^5.85.5",
